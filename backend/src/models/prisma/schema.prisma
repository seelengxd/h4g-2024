// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id            Int      @id @default(autoincrement())
  createdAt     DateTime @default(now())
  password      String
  email         String   @unique
  role          Role     @default(USER)
  fullName      String
  preferredName String
  profile       Profile?
}

model Profile {
  id          Int        @id @default(autoincrement())
  dob         DateTime
  description String
  interests   Interest[]
  skills      Skill[]

  user   User @relation(fields: [userId], references: [id])
  userId Int  @unique
}

model Interest {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  profiles Profile[]
}

model Skill {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  profiles Profile[]
}

model Organisation {
  id          Int        @id @default(autoincrement())
  name        String
  description String
  imageUrl    String?
  websiteUrl  String?
  activities  Activity[]
}

enum ActivityType {
  VOLUNTEER
  WORKSHOP
  TRAINING
}

model Activity {
  id          Int          @id @default(autoincrement())
  name        String
  type        ActivityType @default(VOLUNTEER)
  description String       @default("This is a fun activity!")

  organisation   Organisation     @relation(fields: [organisationId], references: [id])
  organisationId Int
  activityDates  ActivityDate[]
  EnrollmentForm EnrollmentForm[]
}

model ActivityDate {
  id    Int      @id @default(autoincrement())
  start DateTime
  end   DateTime

  activity   Activity @relation(fields: [activityId], references: [id])
  activityId Int
}

model EnrollmentForm {
  id         Int  @id @default(autoincrement())
  formSchema Json

  activityId Int
  activity   Activity @relation(fields: [activityId], references: [id])
}
